<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>by.tr.web.controller.listener.ServletContextInitializer</listener-class>
    </listener>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>by.tr.web.controller.FrontController</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/mpb</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/classes/log4j.properties</param-value>
    </context-param>

    <servlet>
        <servlet-name>LogIn</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/jsp/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Account</servlet-name>
        <jsp-file>/jsp/account.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Movies</servlet-name>
        <jsp-file>/jsp/movies.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Movies</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Movie</servlet-name>
        <jsp-file>/jsp/movie.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Movie</servlet-name>
        <url-pattern>/m</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TV</servlet-name>
        <jsp-file>/jsp/tv.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>TV</servlet-name>
        <url-pattern>/tv</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>25</session-timeout>
    </session-config>
    
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>by.tr.web.controller.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>pageEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>AccessChecker</filter-name>
        <filter-class>by.tr.web.controller.filter.AccessChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessChecker</filter-name>
        <url-pattern>/mpb</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/mpb</url-pattern>
    </filter-mapping>
</web-app>
